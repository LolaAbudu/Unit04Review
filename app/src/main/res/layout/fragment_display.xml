<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.DisplayFragment"
    android:orientation="vertical">

    <TextView
        android:id="@+id/fragment_name_text_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/fragment_texture_text_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/fragment_length_text_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/fragment_color_text_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="25sp"/>

    <ImageView
        android:id="@+id/fragment_image_image_view"
        android:layout_width="match_parent"
        android:layout_height="250dp" />

</LinearLayout>